<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PaymentActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical"
            android:padding="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="سداد الرسوم"
                android:textColor="#fff"
                android:textSize="32sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="..."
                android:textColor="#fff"
                android:textSize="15sp" />

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:visibility="invisible"
            android:id="@+id/cvPaymentStatus"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvPaid"
                android:visibility="invisible"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="شكراً. انت مسدد للرسوم بالفعل.!"/>

            <TextView
                android:id="@+id/tvUnPaid"
                android:visibility="invisible"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="انت غير مسدد للرسوم بعد يمكنك الدفع من خلال الغضط على زر التسجيل بالاسفل!"/>

        </android.support.v7.widget.CardView>

        <RelativeLayout

            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:visibility="invisible"
                android:id="@+id/btnPay"
                android:layout_alignParentBottom="true"
                android:background="@drawable/btn_primary"
                android:textColor="#fff"
                android:text="سداد الرسوم"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>